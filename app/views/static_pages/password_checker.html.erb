  <div class="background">
    <div class="container" style="height:350px">
      <header>
        <h1>Login</h1>
      </header>

      <form style="padding-top:15px" id="submit_form">
        <input type="text" placeholder="Email" class="textbox" style="margin-bottom:5px;" />
        <input type="password" id="password_field" placeholder="Password" class="textbox" />

        <div id="pass_strength" style="display:none">
          <span style="float:left">Password Strength:</span>
          <span id="pass_status" style="float:right">Terrible</span>
          <input class="textbox progress-bar-danger" id="bootstrap_bar" style="height:2px;"></input>
        </div>

        <input type="submit" value="Enter" class="button" />
      </form>
      
        <!-- <img class="email" src="email.png"> -->
